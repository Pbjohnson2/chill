<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="80dp"
    android:layout_width="fill_parent"
    android:id="@+id/relative_layout_item"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/usernameicon"
        android:id="@+id/image_name"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:text="A"
        android:id="@+id/textview_username_alias"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/image_name"
        android:layout_toStartOf="@+id/linear_layout_text" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:id="@+id/linear_layout_text"
        android:layout_toRightOf="@id/image_name"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="New Text"
            android:id="@+id/textview_username"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAFFFFFF"
            android:textSize="12sp"
            android:text="New Text"
            android:id="@+id/textview_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAFFFFFF"
            android:textSize="12sp"
            android:text="New Text"
            android:id="@+id/textview_date" />
        </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/image_chill"
        android:src="@drawable/lips_icon"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>