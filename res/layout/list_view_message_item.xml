<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/linear_layout_all"
              android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="80dp"
                    android:layout_width="fill_parent"
                    android:id="@+id/relative_layout_item"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical">

        <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/image_chill"
                android:background="@drawable/logo"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/linear_layout_right"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:id="@+id/linear_layout_main_text"
                      android:orientation="vertical"
                      android:paddingLeft="20dp"
                      android:gravity="center_vertical" android:layout_alignParentTop="true"
                      android:layout_toRightOf="@+id/image_chill">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:text="New Text"
                    android:id="@+id/textview_username"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:text="New Text"
                    android:id="@+id/textview_location"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:id="@+id/linear_layout_right"
                      android:orientation="vertical">

        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="New Text"
                android:id="@+id/textview_date"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
          android:id="@+id/style_bar"
          android:layout_height="1dp"
          android:layout_width="180dp"
          android:background="#FFFFFF"
          android:layout_gravity="right"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/linear_layout_buttons"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_gravity="right">
        <Button
                style="@style/ButtonNoOutline"
                android:text="@string/accept"
                android:textColor="#FFFFFF"
                android:id="@+id/button_accept"/>

        <Button
                style="@style/ButtonNoOutline"
                android:text="@string/dismiss"
                android:textColor="#FFFFFF"
                android:id="@+id/button_dismiss"/>
    </LinearLayout>
</LinearLayout>